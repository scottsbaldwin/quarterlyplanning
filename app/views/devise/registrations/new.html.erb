<h1>create an account</h1>

<%= form_for(resource, :as => resource_name, :url => user_registration_path, html: { role: 'form', class: 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :login %>
    <%= f.text_field :login %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="actions"><%= f.submit "Sign up", :class => "button" %></div>
<% end %>
<%= render :partial => "devise/shared/links" %>
